  //- title with svg:
  mixin chapter(title, index)
    .chapter
      case index
        when 1: .chapter__logo.chapter__logo-profile
          +svgProfile

        when 2: .chapter__logo.chapter__logo-education          
          +svgEducation

        when 3: .chapter__logo.chapter__logo-experience          
          +svgExperience

        when 4: .chapter__logo.chapter__logo-software          
          +svgSoftware
        
        when 5: .chapter__logo.chapter__logo-contact          
          +svgContact
        
        when 6: .chapter__logo.chapter__logo-skills          
          +svgSkills

        default
            .chapter__logo.chapter__logo-profile
                +svgProfile

      .chapter__list
        if (title === 'profile')
          p.chapter__profile= title

        if (title === 'education')
          p.chapter__education= title

        if (title === 'experience')
          p.chapter__experience= title

        if (title === 'software')
          p.chapter__software= title

        if (title === 'contact')
          p.chapter__contact= title

        if (title === 'skills')
          p.chapter__skills= title

      .chapter__side
        .chapter__side-line
